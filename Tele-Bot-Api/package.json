{
  "name": "tele-bot",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "tsup && bun run sentry:sourcemaps && bun run sentry:sourcemaps && bun run sentry:sourcemaps",
    "send-message": "bun src/scripts/send-message.ts",
    "sender": "bun src/scripts/sender/index.ts",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org pegasus-kt --project tele-bot-api dist && sentry-cli sourcemaps upload --org pegasus-kt --project tele-bot-api dist",
    "format": "prettier --write .",
    "check-unused": "depcheck --ignores='@types/bun, prettier-plugin-organize-imports' --skip-missing"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.2",
    "@types/response-time": "^2.3.8",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "tsup": "^8.2.4"
  },
  "peerDependencies": {
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@sentry/bun": "^8.27.0",
    "@sentry/cli": "^2.34.1",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "no-try": "^4.0.0",
    "response-time": "^2.3.2",
    "telegram": "^2.24.11"
  }
}